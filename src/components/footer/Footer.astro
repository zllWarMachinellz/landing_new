---

import { Icon } from 'astro-icon/components';
import {footerNavigation, socialMediaItems} from '../../data/footer-info.ts';
import FooterColumn from './FooterColumn.astro';

---

<footer class="flex justify-center items-center border-t-1 border-[#2A3445] bg-gray-200">
    <div class="max-w-7xl  w-full pt-10 pb-4">
        <div class="flex flex-col sm:flex-row justify-between items-center">
            <div class="flex flex-row items-center gap-4">
                <img
                    width="100"
                    src="/imgs/logos/LOGO-SIN-FONDO.png"
                    alt="logo study"
                />
                <h2 class="text-2xl font-bold text-[#2A3445]">
                    Cursos Gratis Online
                </h2>
            </div>
            <div class="flex flex-row flex-wrap gap-10 px-10 sm:px-0">
                {
                    footerNavigation.map(el => <FooterColumn title={el.title} links={el.links} />)
                }
            </div>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 justify-between items-center pt-10 ">
            <span>&copy; 2025 Study Formaci√≥n Profesional</span>
            <div class="flex flex-row gap-5">
                {
                    socialMediaItems.map(el => (<a href={el.href} ><Icon name={el.icon} color={'#2A3445'} size={30}/></a>))
                }
            </div>
        </div>
    </div>
</footer>
